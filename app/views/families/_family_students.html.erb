<% unless @active_students.empty? %>
  <!-- <h3>&nbsp;</h3> -->
  <div class="panel clearfix">
    <h5>Active Students</h5>
    <ul class="side-nav">
      <% @active_students.each do |student| %>
        <li><%= link_to student.name, student_path(student) %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% unless @inactive_students.empty? %>
  <div class="panel clearfix" id="past">
    <h5>Inactive Students</h5>
    <ul class="side-nav">
      <% @inactive_students.each do |student| %>
        <li><%= link_to student.name, student_path(student) %> </li>
      <% end %>
    </ul>
  </div>
<% end %>